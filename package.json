{
  "name": "easyloops-react",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "volta": {
    "node": "22.5.0"
  },
  "scripts": {
    "dev": "next dev -p 3010",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "# Testing scripts": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:wasm": "playwright test e2e/wasm-*.spec.ts",
    "test:wasm:ui": "playwright test e2e/wasm-*.spec.ts --ui",
    "test:wasm:debug": "playwright test e2e/wasm-*.spec.ts --debug",
    "test:wasm:ci": "playwright test e2e/wasm-*.spec.ts --reporter=json",
    "test:wasm:full": "./scripts/run-wasm-tests.sh",
    "test:ci": "./scripts/run-unit-tests.sh",
    "# Build scripts": "",
    "build:prod": "next build",
    "build:analyze": "ANALYZE=true next build",
    "# Deployment scripts": "",
    "deploy:firebase": "firebase deploy --only hosting:easyloops",
    "deploy:firebase:full": "npm run build:prod && npm run deploy:firebase",
    "deploy:s3": "node ./scripts/deploy-s3.js",
    "deploy:s3:full": "npm run build:prod && npm run deploy:s3",
    "deploy:vercel": "vercel --prod",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "# CI/CD scripts": "",
    "ci-local": "./scripts/run-ci-local.sh",
    "ci:build": "npm run build:prod",
    "ci:deploy": "npm run deploy:firebase",
    "# Git hooks": "",
    "prepare": "husky",
    "check-node": "./scripts/check-node-version.sh",
    "test:github-actions": "./scripts/simulate-github-actions.sh",
    "mcp:start": "node scripts/start-mcp-server.js"
  },
  "dependencies": {
    "error-stack-parser": "^2.1.4",
    "firebase": "^11.9.0",
    "marked": "^16.0.0",
    "monaco-editor": "^0.52.2",
    "next": "15.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "stackframe": "^1.3.4",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.3",
    "@playwright/mcp": "^0.0.30",
    "@playwright/test": "^1.52.0",
    "@tauri-apps/cli": "^2.6.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "lint-staged": "^16.1.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
